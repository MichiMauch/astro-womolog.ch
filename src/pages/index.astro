---
	import { getSheetData } from '../lib/sheetService'; // Importiere die Datenabruf-Funktion
	import CampCard from '../components/CampCard.astro'; // Importiere deine CampCard-Komponente
	import MainLayout from '../layouts/MainLayout.astro';

	const sheetData = await getSheetData(); // Rufe die Daten von der API ab

	// sheetData wird als Array von Arrays zurÃ¼ckgegeben, wobei jede Zeile ein Array ist
	// Nimm an, dass der Titel in der ersten Spalte und der Ort in der zweiten Spalte ist
	const placesWithLocations = sheetData.map(row => ({
		place: row[0],  // Titel in der ersten Spalte
		location: row[1],  // Ort in der zweiten Spalte
	}));
---

<MainLayout>
	<h1>Unsere Wohnmobil-Standorte</h1>

	<section>
		{placesWithLocations.map(({ place, location }) => (
		<CampCard place={place} location={location} />
		))}
	</section>
</MainLayout>